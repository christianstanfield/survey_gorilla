<div class="box">
	<a href='/users/<%= @user.id %>/surveys/new'>Create a New Survey</a>

	<p>Surveys you created</p>
	<ul>
		<% @user.created_surveys.each do |survey| %>
		<li><a href="/surveys/<%= survey.id %>/stats"><%= survey.title %></a></li>
		<% end %>
	</ul>

	<p>Available surveys to take</p>
		<ul>
			<% @all_surveys.each do |survey| %>
				<a href="/surveys/<%= survey.id %>/take">
					<%= survey.title %>
				</a>
				<br>
			<% end %>
		</ul>

	<p>Surveys you have taken</p>
	<ul>
		<% @user.taken_surveys.each do |survey| %>
		<li><%= survey.created_survey.title %></li>
		<% end %>
	</ul>

</div>
