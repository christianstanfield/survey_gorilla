<div class="container">
	<a href='/users/<%= @user.id %>/surveys/new'>Create a New Survey</a>
	<a href='/surveys'>Take a Survey</a>
	
	<ul>
		<% @users.created_surveys.each do |survey| %>
		<li><a href="#"><%= survey.title %></a></li>
		<% end %>
	</ul>
	
	<ul>
		<% @users.taken_surveys.each do |survey| %>
		<li><a href="#"><%= survey.created_survey.title %></a></li>
		<% end %>
	</ul>

</div>