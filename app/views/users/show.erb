<div class="box">
	<a href='/users/<%= @user.id %>/surveys/new'>Create a New Survey</a>
	<a href='/surveys'>Take a Survey</a>
	
	<ul>
		<% @user.created_surveys.each do |survey| %>
		<li><a href="/surveys/#{survey.id}"><%= survey.title %></a></li>
		<% end %>
	</ul>
	
	<ul>
		<% @user.taken_surveys.each do |survey| %>
		<li><%= survey.created_survey.title %></li>
		<% end %>
	</ul>

</div>