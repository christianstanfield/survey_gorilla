<div class="container">
	<h1>Welcome <%= @user.name %></h1>

	<div class='center_link'>
		<a href='/users/<%= @user.id %>/surveys/new'>
			<b>Create a New Survey</b>
		</a>
	</div>

	<div class='section'>
		<h3>Surveys you created</h3>
		<ul>
			<% @user.created_surveys.each do |survey| %>
				<li>
					<a href="/surveys/<%= survey.id %>/stats">
						<%= survey.title %>
					</a>
				</li>
			<% end %>
		</ul>
	</div>

	<div class='section'>
		<h3>Available surveys to take</h3>
			<ul>
				<% @all_surveys.each do |survey| %>
					<li>
						<a href="/surveys/<%= survey.id %>/take">
							<%= survey.title %>
						</a>
					</li>
				<% end %>
			</ul>
	</div>

	<div class='section'>
		<h3>Surveys you have taken</h3>
		<ul>
			<% @user.taken_surveys.each do |survey| %>
				<li>
					<%= survey.created_survey.title %>
				</li>
			<% end %>
		</ul>
	</div>
</div>
